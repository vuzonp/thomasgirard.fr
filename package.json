{
  "name": "tpl-thomasgirard-fr",
  "version": "1.0.0",
  "description": "Personnal theme for hugo",
  "scripts": {

    "build:css": "node bin/build-css.js",
    "build:html": "node bin/build-html.js",

    "watch:css": "nodemon -e css -w src/css --exec \"npm run build:css\"",
    "watch:html": "nodemon -e hbs -w src/hbs --exec \"npm run build:html\"",

    "build": "npm run build:html && npm run build:css",
    "watch": "nodemon -e css,hbs -w src --exec \"npm run build\""

  },
  "author": "Thomas Girard <hello@thomasgirard.fr> (http://www.thomasgirard.fr/)",
  "license": "LGPLv3",
  "devDependencies": {
    "cli-color": "^1.1.0",
    "cssnano": "^3.8.2",
    "glob": "^7.1.1",
    "handlebars-helpers": "^0.7.5",
    "nodemon": "^1.11.0",
    "postcss": "^5.2.6",
    "postcss-cssnext": "^2.9.0",
    "postcss-import": "^9.0.0"
  },
  "dependencies": {
    "handlebars": "^4.0.6"
  }
}
